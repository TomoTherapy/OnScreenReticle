            <StackPanel HorizontalAlignment="Center" Height="104" Margin="0,185,0,0" VerticalAlignment="Top" Width="325" Background="#26FFFFFF" CornerRadius="5" >
                <Border Style="{StaticResource TitleBorder}">
                    <Grid>
                        <TextBlock Text="DOT" Style="{StaticResource TitleTextBlock}"/>
                    </Grid>
                </Border>
                <Grid Height="35" Padding="0,-10,0,-10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="62*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="73*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding DotVisibility, Mode=TwoWay}" Margin="10,-3,0,0" Grid.Column="1">
                        <CheckBox.RenderTransform>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                    <Button x:Name="DotColorButton" Style="{StaticResource ForColorPicker}" Grid.Column="2">
                        <Button.Flyout>
                            <Flyout>
                                <Flyout.FlyoutPresenterStyle>
                                    <Style TargetType="FlyoutPresenter">
                                        <Setter Property="Background" Value="#6F000000"/>
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Flyout.FlyoutPresenterStyle>
                                <RelativePanel>
                                    <ColorPicker x:Name="DotColorPicker" Color="{Binding DotColor, Mode=TwoWay}" ColorSpectrumShape="Ring" IsAlphaEnabled="True" IsColorPreviewVisible="False" IsHexInputVisible="True" IsColorChannelTextInputVisible="False" IsAlphaTextInputVisible="False"/>
                                    <Grid RelativePanel.Below="DotColorPicker" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                                        <Button Click="DotColorPickerClose_Click" Style="{StaticResource ForFlyout}"/>
                                    </Grid>
                                </RelativePanel>
                            </Flyout>
                        </Button.Flyout>
                        <Rectangle x:Name="DotColorRectangle" Width="26" Height="26" >
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding DotColor}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <TextBlock Text="Visibility" Style="{StaticResource ItemTextBlock}"/>
                </Grid>
                <Grid Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="62*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="73*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Diameter" Style="{StaticResource ItemTextBlock}"/>
                    <Slider HorizontalAlignment="Center" VerticalAlignment="Center" Value="{Binding DotDiameter, Mode=TwoWay}" Grid.Column="1"  Maximum="30" LargeChange="1" SmallChange="0.5" Minimum="1" StepFrequency="0.1"/>
                    <TextBox Grid.Column="2" Text="{Binding DotDiameter, Mode=TwoWay}" Name="DotDiameter_textBox"/>
                </Grid>
            </StackPanel>
            <TextBlock Text="Click to pin!" Visibility="{Binding Pinned}" FontSize="16" HorizontalAlignment="Right" Margin="0,28,76,0" VerticalAlignment="Top" Foreground="White"/>
            <Image HorizontalAlignment="Right" Height="40" Margin="0,5,35,0" VerticalAlignment="Top" Width="34" Source="/Assets/arrow-white.png" RenderTransformOrigin="0.5,0.5" Visibility="{Binding Pinned}" Stretch="Fill" UseLayoutRounding="False">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="-90"/>
                </Image.RenderTransform>
            </Image>
            <Button x:Name="Center_button" Content="Center" Margin="10,10,0,0" VerticalAlignment="Top" Click="Center_button_Click" Visibility="{Binding GameBarState}" Style="{StaticResource ForCommonButton}"/>
        </Grid>
    </Grid>
</Page>
